@model AdvAgency.Models.AdvertCategory

@{
    ViewData["Title"] = "Удаление категории рекламы";
}

<h1>Удаление категории рекламы</h1>

<div class="alert alert-danger">
    <h3>Вы уверены, что хотите удалить эту категорию?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Название</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Описание</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Базовая цена</dt>
        <dd class="col-sm-9">@Model.BasePrice.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div> 