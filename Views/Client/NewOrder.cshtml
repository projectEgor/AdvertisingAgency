@model AdvAgency.ViewModels.NewOrderViewModel
@{
    ViewData["Title"] = "Новый заказ";
}

<h1>Создание нового заказа</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="NewOrder" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="AdvertCategoryId" class="control-label">Категория рекламы</label>
                <select asp-for="AdvertCategoryId" class="form-control">
                    <option value="">-- Выберите категорию --</option>
                    @foreach (var category in ViewBag.AdvertCategories)
                    {
                        <option value="@category.Id">@category.Name - @category.BasePrice.ToString("C")</option>
                    }
                </select>
                <span asp-validation-for="AdvertCategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">Дата начала</label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">Дата окончания</label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Создать заказ</button>
                <a asp-action="MyOrders" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 