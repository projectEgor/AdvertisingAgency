@model IEnumerable<AdvAgency.Models.Users>
@{
    ViewData["Title"] = "Управление персоналом";
}

<h1>Управление персоналом</h1>

<p>
    <a asp-action="UserManagement" class="btn btn-secondary">Вернуться к управлению пользователями</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Редактировать</a>
                        <a asp-action="RoleManagement" asp-route-userId="@user.Id" class="btn btn-sm btn-info">Роли</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table> 