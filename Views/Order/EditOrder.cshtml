@model AdvAgency.Models.AdOrder

<h2>Редактировать заказ</h2>

<form asp-action="EditOrder" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="AdvertCategoryId">Категория рекламы</label>
        @Html.DropDownListFor(m => m.AdvertCategoryId, new SelectList(ViewBag.AdvertCategories, "Id", "Name"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Description">Описание</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="StartDate">Дата начала</label>
        @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label for="EndDate">Дата окончания</label>
        @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label for="Status">Статус</label>
        @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="TotalPrice">Общая стоимость</label>
        @Html.EditorFor(m => m.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Отмена</a>